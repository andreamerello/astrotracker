<PolarScreen>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            pos: self.pos
            size: self.size

    MyScatterPlaneLayout:
        id: scatter
        do_rotation: False
        do_translation: True
        do_scale: True
        auto_bring_to_front: False

        ColorClippingWidget:
            id: color_clipping
            size: root.ids.sky.size
            size_hint: None, None
            #border_color: (1, 0, 0, 1)
            Image:
                id: sky
                texture: root.camera.frame_texture
                #source: 'desk-small.jpg'
                pos: 0, 0
                size: self.texture_size
                size_hint: None, None

        Image:
            id: stars
            visible: True
            opacity: 1 if self.visible else 0
            source: root.settings.lens_filename
            center: self.width * root.NPx, self.height * root.NPy
            size: root.ids.sky.size
            size_hint: None, None
            allow_stretch: True
            canvas.before:
                PushMatrix
                Rotate:
                    angle: root.settings.stars_angle
                    origin: self.center # self.width * root.NPx, self.height * root.NPy
            canvas.after:
                PopMatrix
                # Color:
                #     rgba: (0, 1, 0, 1)
                # Line:
                #     circle: self.center_x, self.center_y, 10


    BoxLayout:
        orientation: 'horizontal'
        size_hint: None, None
        height: '50dp'
        width: root.width - dp(100)

        Label:
            text: 'Black: %d' % (root.ids.slider.value1)
            color: Theme.PRIMARY
            width: self.texture_size[0] + dp(10)
            size_hint_x: None
        RangeSlider:
            id: slider
            min: 0
            max: 255
            value1: 0
            value2: 255
            on_value1: color_clipping.black = self.value1
            on_value2: color_clipping.white = self.value2
        Label:
            text: 'White: %d' % (root.ids.slider.value2)
            color: Theme.PRIMARY
            width: self.texture_size[0] + dp(10)
            size_hint_x: None

    BoxLayout:
        # right toolbar
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        right: root.right
        orientation: 'vertical'
        size_hint_x: None
        width: '100dp'

        ImgFileName:
            id: imgfilename
            right: root.right
        Separator:

        FlatButton:
            text: root.camera.status
            show_border: False
            color: (1, 0, 0, 1)
            on_release: root.status_click()

        Label:
            text: "Frame %d" % root.camera.frame_no
            color: (1, 0, 0, 1)

        Label:
            text: "%.2f fps" % root.camera.fps
            color: (1, 0, 0, 1)

        FlatButton:
            text: 'Settings %s' % icon('fa-gear')
            markup: True
            show_border: False
            on_release: root.open_settings()

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: "50dp"

            IconButton:
                icon: 'fa-play'
                font_size: "40dp"
                on_release: root.start_camera()

            IconButton:
                icon: 'fa-stop'
                font_size: "40dp"
                on_release: root.stop_camera()

        BoxLayout:
            id: star_toolbar
            orientation: 'horizontal'
            size_hint_y: None
            height: "20dp"
            IconButton:
                icon: 'fa-minus'
                font_size: "24sp"
                on_release: root.settings.extra_stars_angle -= 10
            IconButton:
                icon: "fa-minus"
                font_size: "12sp"
                on_release: root.settings.extra_stars_angle -= 1
            IconButton:
                icon: "fa-star" if stars.visible else "fa-star-o"
                on_release: stars.visible = not stars.visible

            IconButton:
                icon: "fa-plus"
                font_size: "12sp"
                on_release: root.settings.extra_stars_angle += 1
            IconButton:
                icon: "fa-plus"
                font_size: "24sp"
                on_release: root.settings.extra_stars_angle += 10


<WithCaption@BoxLayout>:
    orientation: 'horizontal'
    caption: ''
    Label:
        text: root.caption


<PolarSettingsScreen>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1
        row_force_default: True
        row_default_height: "30sp"

        WithCaption:
            caption: 'Location'
            Spinner:
                id: location
                text: root.settings.location
                on_text: root.settings.location = self.text
                values: root.settings.all_locations

        WithCaption:
            caption: 'Latitude'
            Label:
                id: latitude
                text: '%.5f' % root.settings.latitude

        WithCaption:
            caption: 'Longitude'
            Label:
                id: longitude
                text: '%.5f' % root.settings.longitude

        WithCaption:
            caption: 'Lens'
            Spinner:
                text: root.settings.lens
                on_text: root.settings.lens = self.text
                values: 'Canon-75mm', 'Generic-45mm'

        ## these settings used to be inside PolarScreen. They have been moved
